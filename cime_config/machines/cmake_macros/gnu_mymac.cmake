set(CXX_LINKER "CXX")
string(APPEND CFLAGS " -I$ENV{NETCDF_C_PATH}/include -I$ENV{HDF5_PATH}/include")
string(APPEND FFLAGS " -I$ENV{NETCDF_FORTRAN_PATH}/include -I$ENV{NETCDF_C_PATH}/include -I$ENV{HDF5_PATH}/include")
string(APPEND LDFLAGS " -framework Accelerate")
string(APPEND LDFLAGS " -ld_classic")
if (COMP_CLASS STREQUAL cpl)
  string(APPEND LDFLAGS " -L$ENV{BLASLAPACK_LIBDIR} -llapack -lblas")
endif()
if (compile_threaded)
  string(APPEND LDFLAGS " -L$ENV{CC_ROOT}/lib -lgomp")
endif()
execute_process(COMMAND $ENV{NETCDF_C_PATH}/bin/nc-config --libs OUTPUT_VARIABLE SHELL_CMD_OUTPUT_BUILD_INTERNAL_IGNORE0 OUTPUT_STRIP_TRAILING_WHITESPACE)
string(APPEND SLIBS " ${SHELL_CMD_OUTPUT_BUILD_INTERNAL_IGNORE0}")
execute_process(COMMAND $ENV{NETCDF_FORTRAN_PATH}/bin/nf-config --flibs OUTPUT_VARIABLE SHELL_CMD_OUTPUT_BUILD_INTERNAL_IGNORE0 OUTPUT_STRIP_TRAILING_WHITESPACE)
string(APPEND SLIBS " ${SHELL_CMD_OUTPUT_BUILD_INTERNAL_IGNORE0}")
string(APPEND SLIBS " $ENV{HDF5_PATH}/lib")
